<% layout("/layouts/boilerplat.ejs")%>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Edit your Listing</h3>
                <form action="/listing/<%= data._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-lable">Title</label>
                        <input type="text" name="listing[title]" id="title" value="<%=data.title%>" class="form-control"
                            required>
                        <div class="valid-feedback">Title looks good</div>
                        <div class="invalid-feedback">Title should be valid</div>

                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-lable">Description</label>
                        <textarea rows="5" cols="20" type="text" name="listing[description]" id="description"
                            class="form-control" required><%=data.description%></textarea>
                        <div class="valid-feedback">Description looks good</div>
                        <div class="invalid-feedback">Description should be valid</div>

                    </div>
                    <div class="mb-3">
                        <p>Old Listing img</p>
                        <img src="<%=newurl%>" alt="">
                    </div>
                    <div class="mb-3">
                        <div class="mb-3">
                            <label for="image" class="form-lable">Upload Listing Image</label>
                            <input type="file" name="listing[image][url]" id="Image" class="form-control" required>
                            <div class="valid-feedback">image looks good</div>
                            <div class="invalid-feedback">image should be valid</div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label for="image" class="form-lable">price</label>
                            <input type="number" name="listing[price]" id="price" value="<%=data.price%>"
                                class="form-control" required>
                            <div class="valid-feedback">price looks good</div>
                            <div class="invalid-feedback">price should be valid</div>
                        </div>


                        <div class="mb-3 col-md-6">
                            <label for="image" class="form-lable">country</label>

                            <input type="text" name="listing[country]" id="country" value="<%=data.country%>"
                                class="form-control" required>
                            <div class="valid-feedback">country looks good</div>
                            <div class="invalid-feedback">country should be valid</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-lable">location</label>
                        <input type="text" name="listing[location]" id="location" value="<%=data.location%>"
                            class="form-control" required>
                        <div class="valid-feedback">location looks good</div>
                        <div class="invalid-feedback">location should be valid</div>
                    </div>
                    <button class="btn btn-dark" id="edit-btn" type="submit">Edit</button>
                </form>
                <br><br>
            </div>
        </div>
    </body>